---
import { t, changeLanguage } from "i18next";
---
<section class="relative pt-20 pb-4 md:pt-40 sm:pb-24">
    <div class="container px-4 mx-auto">
      <div class="flex flex-wrap items-center">
        <div class="relative w-full h-full px-4 mt-32 ml-auto mr-auto md:mt-0 md:w-1/2">
          <img class="object-cover w-3/4 h-full mx-auto rounded-lg shadow-lg max-h-96"
            src="/img/bg_texture.jpg"
            alt="Unite Background Texture"
          />
          <img class="absolute right-0 h-72 -bottom-10"
            src="/img/buzzwole.png"
            alt="Buzzwole"
          />
        </div>
        <div class="w-full px-4 mt-32 ml-auto mr-auto md:mt-0 md:w-5/12">
          <div class="md:pr-12">
            <div
              class="w-16 h-16 mb-6 overflow-hidden rounded-full shadow-lg"
            >
              <img class="object-cover w-full h-full" 
                src="/img/squad.jpg"
                alt="Squad Icon"
              >
            </div>
            <h3 class="text-3xl font-semibold">{ t("index.intro.title") }</h3>
            <p class="mt-4 text-lg leading-relaxed text-gray-600">
              { t("index.intro.description") }
            </p>
            <ul class="mt-6 list-none">
              <li class="py-2">
                <div class="flex items-center">
                  <div>
                    <span
                      class="inline-block px-2 py-1 mr-3 text-xs font-semibold uppercase rounded-full text-primary-600 bg-primary-200"
                      ><i class="fas fa-fingerprint"></i
                    ></span>
                  </div>
                  <div>
                    <h4 class="text-gray-600">
                      { t("index.intro.first-feature") }
                    </h4>
                  </div>
                </div>
              </li>
              <li class="py-2">
                <div class="flex items-center">
                  <div>
                    <span
                      class="inline-block px-2 py-1 mr-3 text-xs font-semibold uppercase rounded-full text-primary-600 bg-primary-200"
                      ><i class="fab fa-html5"></i
                    ></span>
                  </div>
                  <div>
                    <h4 class="text-gray-600">
                      { t("index.intro.second-feature") }
                    </h4>
                  </div>
                </div>
              </li>
              <li class="py-2">
                <div class="flex items-center">
                  <div>
                    <span
                      class="inline-block px-2 py-1 mr-3 text-xs font-semibold uppercase rounded-full text-primary-600 bg-primary-200"
                      ><i class="far fa-paper-plane"></i
                    ></span>
                  </div>
                  <div>
                    <h4 class="text-gray-600">
                      { t("index.intro.third-feature") }
                    </h4>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>