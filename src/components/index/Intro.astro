---
import { t, changeLanguage } from "i18next";
---

<section class="relative pt-20 pb-4 lg:pt-40 sm:pb-24">
  <div class="container px-4 mx-auto">
    <div class="flex flex-wrap items-center">
      <div
        class="relative w-full h-full px-4 mt-32 ml-auto mr-auto lg:mt-0 lg:w-1/2"
      >
        <img
          class="object-cover w-3/4 h-72 mx-auto rounded-lg shadow-lg max-h-96"
          src="/img/bg_texture.jpg"
          alt="Unite Background Texture"
        />
        <img
          class="absolute right-0 sm:right-12 h-72 -bottom-10"
          src="/img/urshifu.png"
          alt="Urshifu"
        />
      </div>
      <div class="w-full px-4 mt-32 ml-auto mr-auto lg:mt-0 lg:w-5/12">
        <div class="lg:pr-12">
          <div class="w-16 h-16 mb-6 overflow-hidden rounded-full shadow-lg">
            <img
              class="object-cover w-full h-full"
              src="/img/squad.jpg"
              alt="Squad Icon"
            />
          </div>
          <h3 class="text-3xl font-semibold">{t("index.intro.title")}</h3>
          <p class="mt-4 text-lg leading-relaxed text-gray-600">
            {t("index.intro.description")}
          </p>
          <ul class="mt-6 list-none">
            <li class="py-2">
              <div class="flex items-center">
                <div>
                  <span
                    class="text-center inline-block p-1.5 mr-3 text-xs font-semibold uppercase rounded-full text-primary-600 bg-primary-200"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-4 h-4"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z"
                      ></path>
                    </svg>
                  </span>
                </div>
                <div>
                  <h4 class="text-gray-600">
                    {t("index.intro.first-feature")}
                  </h4>
                </div>
              </div>
            </li>
            <li class="py-2">
              <div class="flex items-center">
                <div>
                  <span
                    class="text-center inline-block p-1.5 mr-3 text-xs font-semibold uppercase rounded-full text-primary-600 bg-primary-200"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-4 h-4"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5"
                      ></path>
                    </svg>
                  </span>
                </div>
                <div>
                  <h4 class="text-gray-600">
                    {t("index.intro.second-feature")}
                  </h4>
                </div>
              </div>
            </li>
            <li class="py-2">
              <div class="flex items-center">
                <div>
                  <span
                    class="inline-block p-1.5 mr-3 text-xs font-semibold uppercase rounded-full text-primary-600 bg-primary-200"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="w-4 h-4"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"
                      ></path>
                    </svg>
                  </span>
                </div>
                <div>
                  <h4 class="text-gray-600">
                    {t("index.intro.third-feature")}
                  </h4>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
